---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title = "sourcealpha.ai - Agentic Sourcing for Private Capital",
  description = "AI-powered deal sourcing platform for venture capital and private equity firms. Intelligent automation with human-in-the-loop decision making."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
